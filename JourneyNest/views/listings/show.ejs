<% layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3><%= list.title %></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
      <img
        src="<%= list.image.url %>"
        class="card-img-top show-img"
        alt="listing image"
      />
      <div class="card-body">
        <br />
        <%= list.description %> <br />
        &#8377; <%= list.price.toLocaleString("en-IN") %> <br />
        <%= list.location %> <br />
        <%= list.country %> <br />
      </div>
    </div>
  </div>
  <br />
  <div class="btns">
    <a href="/listings/<%= list._id %>/edit" class="btn edit-btn col-1 offset-3"
      >Edit</a
    >

    <form method="POST" action="/listings/<%= list._id %>?_method=DELETE">
      <button class="btn btn-dark offset-5+">Delete</button>
    </form>
  </div>

  <div class="col-8 offset-3 mb-3">
    <hr />
    <h4>Leave a review</h4>
    <form
      method="POST"
      action="/listings/<%= list._id %>/reviews"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-lable">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
        />
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-lable">Comments</label>
        <textarea
          id="comment"
          name="review[comment]"
          rows="5"
          cols="35"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please write a comment</div>
      </div>
      <button class="btn btn-outline-dark col-1">Submit</button>
    </form>
    <hr />
    <div>
      <p><b>All Reviews</b></p>
      <div class="row">
        <% for( let review of list.reviews ) { %>
        <div class="card col-6 ms-3 mb-3" style="width: 18rem">
          <div class="card-body">
            <h5 class="card-title">user namw</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %>stars</p>
          </div>
          <form
            method="POST"
            action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE"
            class="mb-3"
          >
            <button class="btn btn-dark btn-sm">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
